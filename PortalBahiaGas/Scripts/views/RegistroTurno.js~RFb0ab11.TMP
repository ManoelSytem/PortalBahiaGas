function PopUp(pId) {
    $.ajax({
        url: 'RegistroTurno/PopUpOcorrencia/' + pId,
        success: function (data) {
            $('#modalWrapper').html(data);
            $('#OcorrenciaModal').modal();
        }
    });
}

